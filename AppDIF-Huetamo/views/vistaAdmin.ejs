    <style>
        .GRID_CONTAINER{
            border: 6px solid rgb(217, 217, 217);
            width: min(100%, 1500px);
            margin: 50px auto;
            padding: 15px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            grid-auto-rows: 240px;
            gap: 20px;
           
        }
        
        .GRID_ITEM{
            border: 3px solid rgb(154, 154, 154);
            background-color: rgb(235, 235, 235);
            font-weight: bold;
            position: relative; /* Para posicionar el enlace */
        }

        .GRID_ITEM a {
            color: black;
            text-decoration: none;
            display: block;
            width: 100%;
            height: 100%;
        }

        .GRID_ITEM img {
            width: 90%;
            height: 80%;
            object-fit: cover;
        }

        /* Efecto hover */
        .GRID_ITEM a:hover {
            transition: all 0.3s ease-in-out;
            transform: scale(0.9);
            opacity: 0.8;
        }
    </style>
</head>
